{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "tool",
        "reasoning",
        "parameters"
    ],
    "properties": {
        "tool": {
            "type": "string",
            "description": "Name of the tool to use",
            "enum": [
                "jq",
                "grep",
                "sed",
                "awk",
                "curl",
                "write_file",
                "append_file",
                "text_replace",
                "read_file",
                "download_file"
            ]
        },
        "reasoning": {
            "type": "string",
            "description": "Explanation of why this tool is being used and what it will accomplish"
        },
        "parameters": {
            "type": "object",
            "description": "Tool-specific parameters as key-value pairs",
            "additionalProperties": true
        }
    }
}
