{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "pre_analysis_steps": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "tool": {
                        "type": "string",
                        "description": "Name of the tool to use"
                    },
                    "command": {
                        "type": "string",
                        "description": "Exact command to execute"
                    },
                    "output_type": {
                        "type": "string",
                        "enum": [
                            "metadata",
                            "media_list",
                            "text_sample",
                            "structure_info",
                            "file_info"
                        ],
                        "description": "Type of information this command produces"
                    },
                    "description": {
                        "type": "string",
                        "description": "What information this step provides"
                    }
                },
                "required": [
                    "tool",
                    "command",
                    "output_type",
                    "description"
                ]
            }
        }
    },
    "required": [
        "pre_analysis_steps"
    ]
}
