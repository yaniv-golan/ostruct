{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Multi-Tool Routing Test",
    "description": "Simple schema to test that multi-tool routing works correctly",
    "required": [
        "code_interpreter_test",
        "file_search_test",
        "routing_success"
    ],
    "properties": {
        "code_interpreter_test": {
            "type": "object",
            "required": [
                "file_accessible",
                "line_count",
                "company_name"
            ],
            "properties": {
                "file_accessible": {
                    "type": "boolean"
                },
                "line_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "company_name": {
                    "type": "string"
                }
            }
        },
        "file_search_test": {
            "type": "object",
            "required": [
                "file_accessible",
                "funding_info_found",
                "team_info_found"
            ],
            "properties": {
                "file_accessible": {
                    "type": "boolean"
                },
                "funding_info_found": {
                    "type": "boolean"
                },
                "team_info_found": {
                    "type": "boolean"
                }
            }
        },
        "routing_success": {
            "type": "boolean",
            "description": "Overall success of multi-tool routing test"
        }
    }
}
