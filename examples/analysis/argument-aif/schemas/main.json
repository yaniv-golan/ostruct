{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "migration_notice": {
            "type": "string",
            "description": "Notice about migration to new pipeline system"
        },
        "new_usage": {
            "type": "string",
            "description": "Instructions for using the new pipeline"
        },
        "documentation": {
            "type": "string",
            "description": "Reference to updated documentation"
        }
    },
    "required": [
        "migration_notice",
        "new_usage",
        "documentation"
    ],
    "additionalProperties": false
}
