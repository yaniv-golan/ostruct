[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    .env,
    .tox,
    dist,
    build,
    examples/,
    docs/conf.py

# Maximum line length (matches black's default)
max-line-length = 88

# Ignore certain errors/warnings:
# E203: Whitespace before ':' (conflicts with black)
# W503: Line break before binary operator (conflicts with black)
extend-ignore = E203, W503 